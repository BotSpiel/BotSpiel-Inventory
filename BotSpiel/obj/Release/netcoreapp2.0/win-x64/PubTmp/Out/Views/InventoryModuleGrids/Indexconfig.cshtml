@(Html
        .Grid(Model)
        .Build(columns =>
        {
				columns.Add(model => model.ixInventoryModuleGrid).Titled("Grids").Encoded(false).RenderedAs(item => Html.ActionLink("Grid", "Index", item.sInventoryModuleGrid));
				columns.Add(model => model.sInventoryModuleGrid).Titled("Inventory Module Grid").Sortable(true).Filterable(true);
