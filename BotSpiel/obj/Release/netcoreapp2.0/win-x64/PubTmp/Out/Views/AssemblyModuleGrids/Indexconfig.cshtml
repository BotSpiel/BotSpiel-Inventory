

@model IEnumerable<BotSpiel.DataAccess.Models.AssemblyModuleGridsconfig>

@{
    ViewBag.Title = "Index Assembly Module Grids - Configuration";
}
<br>
<h2>Assembly Module Grids - Configuration</h2>






@(Html
        .Grid(Model)
        .Build(columns =>
        {
				columns.Add(model => model.ixAssemblyModuleGrid).Titled("Grids").Encoded(false).RenderedAs(item => Html.ActionLink("Grid", "Index", item.sAssemblyModuleGrid));
				columns.Add(model => model.sAssemblyModuleGrid).Titled("Assembly Module Grid").Sortable(true).Filterable(true);
				columns.Add(model => model.sShortDescription).Titled("Short Description").Sortable(true).Filterable(true);

        })
        .Pageable(pager =>
        {
            pager.RowsPerPage = 20;
        })
		//.Filterable()
 )



 

