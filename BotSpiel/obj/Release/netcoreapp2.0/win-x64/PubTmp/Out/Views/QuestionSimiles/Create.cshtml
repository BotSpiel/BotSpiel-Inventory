
@model BotSpiel.DataAccess.Models.QuestionSimilesPost

@{
    ViewBag.Title = "Create Question Similes";
}
<br>
<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Question Similes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
			@Html.ActionLink("Question ID", "Index", "Questions", "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ixQuestion", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ixQuestion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sQuestionSimileText, "Question Simile Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.sQuestionSimileText, 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;", placeholder = "Required" })
                @Html.ValidationMessageFor(model => model.sQuestionSimileText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Grid", "Index")
</div>

@section Scripts {
}

 

