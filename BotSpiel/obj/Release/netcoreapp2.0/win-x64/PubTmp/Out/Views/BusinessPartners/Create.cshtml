                @Html.ValidationMessageFor(model => model.ixCompany, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
			@Html.ActionLink("Address ID", "Index", "Addresses", "", htmlAttributes: new { @class = "control-label col-md-2" })
