        <h4>Outbound Carrier Manifest Pickups</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
			@Html.ActionLink("Outbound Carrier Manifest ID", "Index", "OutboundCarrierManifests", "", htmlAttributes: new { @class = "control-label col-md-2" })
