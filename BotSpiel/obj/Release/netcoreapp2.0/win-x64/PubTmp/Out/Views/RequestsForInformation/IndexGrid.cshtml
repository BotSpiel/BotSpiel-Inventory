@using System.Linq;
@using System.Collections.Generic;
@using BotSpiel.Services;
@inject IRequestsForInformationService _requestsforinformationService
@model IEnumerable<BotSpiel.DataAccess.Models.RequestsForInformation>

@{
	List<SelectListItem> queryLanguages = new List<SelectListItem>();
	queryLanguages.AddRange(_requestsforinformationService.selectLanguages().ToList().OrderBy(de => de.sLanguage).Select(de => new SelectListItem() { Text = de.sLanguage, Value = de.sLanguage.ToString()}));
	List<SelectListItem> queryLanguageStyles = new List<SelectListItem>();
	queryLanguageStyles.AddRange(_requestsforinformationService.selectLanguageStyles().ToList().OrderBy(de => de.sLanguageStyle).Select(de => new SelectListItem() { Text = de.sLanguageStyle, Value = de.sLanguageStyle.ToString()}));
	List<SelectListItem> queryResponseTypes = new List<SelectListItem>();
	queryResponseTypes.AddRange(_requestsforinformationService.selectResponseTypes().ToList().OrderBy(de => de.sResponseType).Select(de => new SelectListItem() { Text = de.sResponseType, Value = de.sResponseType.ToString()}));
	List<SelectListItem> queryTopics = new List<SelectListItem>();
	queryTopics.AddRange(_requestsforinformationService.selectTopics().ToList().OrderBy(de => de.sTopic).Select(de => new SelectListItem() { Text = de.sTopic, Value = de.sTopic.ToString()}));

}


@(Html
        .Grid(Model)
        .Build(columns =>
        {
				columns.Add(model => Html.CheckBox("Check_" + model.ixRequestForInformation, new { @class = "rowCheckBox" })).Titled(Html.CheckBox("CheckAll", new { @onclick = "toggleAll()" }));
				columns.Add(model => model.ixRequestForInformation).Titled("Details").Encoded(false).RenderedAs(item => Html.ActionLink("Details", "Details", new { id = item.ixRequestForInformation }, new { @class = "modal-link" }));
				columns.Add(model => model.ixRequestForInformationEdit).Titled("Edit").Encoded(false).RenderedAs(item => Html.ActionLink("Edit", "Edit", new { id = item.ixRequestForInformation }, new { @class = "modal-link" }));
				columns.Add(model => model.sRequestForInformation).Titled("Request For Information").Sortable(true).Filterable(true);
				columns.Add(model => model.Languages.sLanguage).Titled("Language").Sortable(true).Filterable(true).MultiFilterable(true).WithFilterOptions(queryLanguages);
				columns.Add(model => model.LanguageStyles.sLanguageStyle).Titled("Language Style").Sortable(true).Filterable(true).MultiFilterable(true).WithFilterOptions(queryLanguageStyles);
				columns.Add(model => model.Topics.sTopic).Titled("Topic").Sortable(true).Filterable(true).MultiFilterable(true).WithFilterOptions(queryTopics);
				columns.Add(model => model.ResponseTypes.sResponseType).Titled("Response Type").Sortable(true).Filterable(true).MultiFilterable(true).WithFilterOptions(queryResponseTypes);
				columns.Add(model => model.bActive).Titled("Active").Sortable(true).Filterable(true);
				columns.Add(model => model.dtCreatedAt).Titled("Created At").Sortable(true).Filterable(true);
				columns.Add(model => model.dtChangedAt).Titled("Changed At").Sortable(true).Filterable(true);
				columns.Add(model => model.sCreatedBy).Titled("Created By").Sortable(true).Filterable(true);
				columns.Add(model => model.sChangedBy).Titled("Changed By").Sortable(true).Filterable(true);
        })
        .Empty("No data found")
        .Id("requestsforinformation-ajax-grid")
        .Pageable(pager =>
        {
            pager.PageSizes = new Dictionary<Int32, String> { { 0, "All" }, { 5, "5" }, { 10, "10" }, { 15, "15" }, { 20, "20" }, { 40, "40" }, { 100, "100" } };
            pager.ShowPageSizes = true;
            pager.RowsPerPage = 20;
        })
        .Css("css-classes")
        .AppendCss("table-hover")
 )


 

