                @Html.EditorFor(model => model.sDateTimePeriodFormatCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sDateTimePeriodFormatCode, "", new { @class = "text-danger" })
            </div>
        </div>

