
@model BotSpiel.DataAccess.Models.RequestForActionSimilesPost 

@{
    ViewBag.Title = "Edit Request For Action Similes";
}
<br>
<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Request For Action Similes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ixRequestForActionSimile)

        <div class="form-group">
            @Html.LabelFor(model => model.sRequestForActionSimile, "Request For Action Simile", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.sRequestForActionSimile, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sRequestForActionSimile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
			@Html.ActionLink("Request For Action ID", "Index", "RequestsForAction", "", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ixRequestForAction", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ixRequestForAction, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.sRequestForActionSimileText, "Request For Action Simile Text", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.sRequestForActionSimileText, 10, 120, htmlAttributes: new { style = "width: 100%; max-width: 100%;" })
                @Html.ValidationMessageFor(model => model.sRequestForActionSimileText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Grid", "Index")
</div>

