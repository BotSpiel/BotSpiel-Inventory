        @Html.HiddenFor(model => model.ixDateTimePeriodFunction)

        <div class="form-group">
            @Html.LabelFor(model => model.sDateTimePeriodFunction, "Date Time Period Function", htmlAttributes: new { @class = "control-label col-md-2" })
