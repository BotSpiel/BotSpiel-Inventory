
@model BotSpiel.DataAccess.Models.DateTimePeriodFunctionsPost 

@{
    ViewBag.Title = "Edit Date Time Period Functions";
}
<br>
<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Date Time Period Functions</h4>
